@model _MyContentViewModel

        @{
            foreach(Tool tool in Model.Tools)
            {
                <tr>
                    <td>
                            @{
                                // Den Namen der Toolgruppe anhand der ID abrufen
                                var toolGroup = Model.ToolGroups.FirstOrDefault(tg => tg.Id == tool.ToolGroup);
                                if (toolGroup != null)
                                {
                                    @toolGroup.Name
                                }
                            }
                    </td>
                    <td>@tool.Name</td>
                    <td>@tool.ShortDescription</td>
                    <td>
                <a class="btn btnGreen" asp-route-id="@tool.Id" asp-controller="ContentView" asp-action="CreateOrEditTool"><i class="fas fa-pencil"></i></a>
                <a class="btn btn-danger" asp-route-id="@tool.Id" asp-controller="ContentView" asp-action="CreateOrEditTool"><i class="far fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        }