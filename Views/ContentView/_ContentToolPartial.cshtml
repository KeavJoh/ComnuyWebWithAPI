@model List<Tool>

<div class="list-group">

    @{
        foreach (Tool tool in Model)
        {
            <a href="#" data-bs-toogle="model" class="list-group-item list-group-item-action" aria-current="true">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@tool.Name</h5>
                    <small>@tool.ShortDescription</small>
                </div>
                <p class="mb-1">@tool.ToolGroup</p>
                <small>@tool.Owner</small>
            </a>
        }
    }

</div>
