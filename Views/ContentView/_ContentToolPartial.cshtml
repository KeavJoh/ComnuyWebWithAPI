@model _ContentDeliveryModel

    @{
        foreach (Tool tool in Model.Tools)
        {
            <tr role="button" onclick="showToolDetail(@tool.Id)">
                <td>
                    <div style="display: flex; justify-content: center; align-items: center;">
                        <img class="rounded d-block img" width="100" height="80" src="@tool.Picture_1">
                    </div>
                </td>
                <td class="align-middle">
                    @{
                        var toolGroup = Model.ToolGroups.FirstOrDefault(tg => tg.Id == tool.ToolGroup);
                        if (toolGroup != null)
                        {
                            @toolGroup.Name
                        }
                    }
                </td>
                <td class="align-middle">
                    <div>
                        <span style="display: block;">@tool.Name</span>
                    </div>
                </td>
                <td class="align-middle">
                    <div>
                        <span style="display: block;">@tool.ShortDescription</span>
                    </div>
                </td>
            </tr>
        }
    }
